light-red = #FFDDDD
very-light-red = #FFEEEE
light-green = #DDFFDD
red = #d9534f
green = #5cb85c
brand-primary = #2b6195
brand-secondary = #f1772c
light-grey = #EEEEEE
white = #FFFFFF

body
  margin-bottom 60px
  padding 50px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
  color #00B7FF

html
  position relative
  min-height 100%

.text-primary
  color brand-primary

.text-primary i:hover
  color brand-secondary

.text-secondary
  color brand-secondary

.footer
  position absolute
  bottom 0
  width 100%

  height 60px
  background-color #f5f5f5

.container
  width auto
  max-width 1200px
  padding 0 15px

.container .text-muted
  margin 20px 0

.panel-if
  height auto
  min-height 400px
  padding-bottom 15px

.panel-then
  height auto
  min-height 400px
  padding-bottom 15px

.description
  padding-bottom 10px

.panel
  height auto
  margin 0 auto

  .panel-green
    background-color light-green
    border-color green
    border-style solid
    border-width 1px
    min-height 400px

  .panel-red
    background-color light-red
    border-color red
    border-style solid
    border-width 1px
    min-height 400px

.panel-heading
  border-top-left-radius 0px
  border-top-right-radius 0px

.panel-green .panel-heading
  border-color green
  color white
  background-color green

.panel-red .panel-heading
  border-color red
  background-color red
  color white

.big-panel
  border-color #333333
  background-color #eeeeee repeat-y
  .buttonbar
    padding-top 20px

.titleIfThen
  padding-top 5px

.header-select
  padding-top 10px
  padding-bottom 10px
  min-height 30px
  width 200px

.clickableRow
  cursor pointer

.rowOddClickable
  background-color light-grey
  cursor pointer

.rowEvenClickable
  background-color white
  cursor pointer

.table .table-intern
  border-color
  background-color very-light-red

.text-danger
  color #e74c3c