//- Fixed navbar
nav.navbar.navbar-default.navbar-fixed-top(data-ng-controller='AuthCtrl')
    .container
        .navbar-header
            button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='#') iFLUX

        .navbar-collapse.collapse#navbar
            ul.nav.navbar-nav
                li(ng-hide='isAuthenticate'): a(ng-href='#/home') Home
                li(ng-hide='isAuthenticate'): a(ng-href='#/signin') Sign in
                li(ng-hide='isAuthenticate'): a(ng-href='#/register') Register
                li(ng-show='isAuthenticate'): a(ng-href='#/cockpit') Cockpit
                li(ng-show='isAuthenticate'): a(ng-href='#/settings') Settings
                li(ng-show='isAuthenticate'): a(ng-href='#/rules') Rules

                li.dropdown(ng-show='isAuthenticate')
                    a.dropdown-toggle(ng-href='' data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Actions
                        span.caret
                    ul.dropdown-menu
                        li: a(ng-href='#/actionTarget') Action Target Templates
                        li: a(ng-href='#/actionType') Action Type
                li.dropdown(ng-show='isAuthenticate')
                    a.dropdown-toggle(ng-href='' data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Events
                        span.caret
                    ul.dropdown-menu
                        li: a(ng-href='#/eventSource') Event Source Templates
                        li: a(ng-href='#/eventType') Event Type
                li(ng-show='isAuthenticate'): a(ng-click='logout()') Sign out

            div(ng-show='isAuthenticate')
                .nav.navbar-nav.navbar-right.header-select(ng-controller="LoginInfoCtrl")
                    ui-select#organizationSelect(on-select="someFunction($item, $model)", ng-model="currentOrganization", theme="bootstrap")
                        ui-select-match(placeholder="Select an organization") {{$select.selected.name}}
                        ui-select-choices(repeat="organization.id as organization in organizations  | filter: { name: $select.search }", value="{{$select.selected.name}}")
                            div(ng-bind-html="organization.name | highlight: $select.search")
